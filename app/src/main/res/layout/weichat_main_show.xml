<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@mipmap/weichatvertialbg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weichat_show_image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@mipmap/weichat_show_image_2"/>

                    <ImageView
                        android:id="@+id/weichat_show_image_3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@mipmap/weichat_show_image_3"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/weichat_show_image_2"/>

                </LinearLayout>



                <ImageView
                    android:id="@+id/weichat_show_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weichat_show_image_1"

                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/weichat_show_image_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weichat_show_image_5"/>

                <ImageView
                    android:id="@+id/weichat_show_image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weichat_show_image_4"
                    android:layout_alignTop="@+id/weichat_show_image_5"
                    android:layout_alignStart="@+id/weichat_show_image_5"/>

                <ImageView
                    android:id="@+id/weichat_show_image_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weichat_show_image_6"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/weichat_show_image_5"/>

            </RelativeLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/weichat_show_sord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/sword"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/weichat_show_image_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weichat_show_image_8"/>
        <ImageView
            android:id="@+id/weichat_show_image_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weichat_show_image_7"
            android:layout_alignTop="@+id/weichat_show_image_8"
            android:layout_alignStart="@+id/weichat_show_image_8"/>

        <ImageView
            android:id="@+id/weichat_show_image_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weichat_show_image_9"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/weichat_show_image_8"/>

        <ImageView
            android:id="@+id/weichat_show_sord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sword2"
            android:layout_toEndOf="@+id/weichat_show_image_8"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        />


</LinearLayout>